@model IEnumerable<ShopConnection.SanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/MainLayoutAdmin.cshtml";
}

<center> <h2 style="color:red"> Quản Lý Tất Cả Sản Phẩm  </h2></center>
<style>
    table {
        border-collapse: collapse;
        width: 50%;
        margin: auto;
    }

    th, td {
        text-align: center;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #5d5e63;
    }

    th {
        background-color: #299fd6;
        color: white;
    }
</style>



<table>
    <tr>
        <th>Mã Sản Phẩm</th>
        <th>Tên Sản Phẩm</th>
        <th>Khóa</th>
        <th>Hình</th>
        <th colspan="2">
            <a href="@Url.Action("Create","SanPhamAdmin")"><img src="~/Asset/images/addNSX.png" /></a>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MaSanPham</td>
            <td>@item.TenSanPham</td>
            <td>@item.TinhTrang</td>
            <td><img src="~/Asset/img/@item.HinhChinh" style="width:50px;height:70px;"/></td>
            <td><a href="@Url.Action("Edit","SanPhamAdmin",new { id = @item.MaSanPham})"> <img src="~/Asset/images/edit.png" /></a> </td>
            <td><a href="@Url.Action("Delete","SanPhamAdmin",new { id = @item.MaSanPham})"> <img src="~/Asset/images/Delete.png" /></a> </td>
        </tr>
    }

</table>



